{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "lib": ["dom", "ES2021"],
    "module": "es2020",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2019",
    "sourceMap": true,
    "jsx": "react-jsx",
    "types": ["node", "react", "react-dom"],
    "baseUrl": "src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
